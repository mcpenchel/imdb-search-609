<div class="container">

  <%= form_tag movies_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a movie"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <%# @movies.each do |movie| %>
          <%# <h4>= movie.title</h4> %>
          <%# <p>= movie.synopsis</p> %>
        <%# end %>

        <% @movies.each do |resource| %>
          <%# Duck Typing %>
          <h4><%= resource.searchable.title %></h4>
          <p><%= resource.searchable.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>